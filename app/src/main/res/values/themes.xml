<resources>

    <!-- TEMA VERDE -->
    <style name="Theme.Vitoria.Green" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Personalizar fondo, botones, dialogs, etc. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="materialAlertDialogTheme">@style/CustomDatePickerDialog_Green</item>
    </style>

    <!-- TEMA MORADO -->
    <style name="Theme.Vitoria.Purple" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="materialAlertDialogTheme">@style/CustomDatePickerDialog_Purple</item>
    </style>

    <style name="CustomDatePickerDialog_Green" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Aquí está la clave -->
        <item name="materialButtonStyle">@style/GreenDialogButton</item>
    </style>

    <style name="CustomDatePickerDialog_Purple" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Estilo para los botones del diálogo -->
        <item name="materialButtonStyle">@style/PurpleDialogButton</item>
    </style>


    <style name="GreenDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green_primary</item>
    </style>

    <style name="PurpleDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_primary</item>
    </style>





</resources>
